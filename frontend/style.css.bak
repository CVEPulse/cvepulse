* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
  background: #05070c;
  color: #f3f4f6;
}

/* Layout */

.page {
  max-width: 1200px;
  margin: 0 auto;
  padding: 20px 16px 40px;
}

.top-bar {
  display: flex;
  align-items: center;
  gap: 16px;
  padding: 14px 16px;
  border-bottom: 1px solid #1f2937;
  background: #020617;
}

.logo-wrap {
  display: flex;
  align-items: center;
  gap: 8px;
}

.logo-icon {
  width: 28px;
  height: 28px;
}

.brand {
  font-weight: 700;
  font-size: 1.25rem;
  color: #22d3ee;
}

.page-title {
  font-size: 1.1rem;
  font-weight: 500;
  color: #e5e7eb;
}

.grid-two {
  display: grid;
  grid-template-columns: 2fr 1.2fr;
  gap: 16px;
  margin-top: 16px;
}

@media (max-width: 900px) {
  .grid-two {
    grid-template-columns: 1fr;
  }
}

/* Cards */

.card {
  background: #020617;
  border-radius: 10px;
  border: 1px solid #1f2937;
  margin-top: 16px;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  border-bottom: 1px solid #1f2937;
}

.card-header h2 {
  font-size: 1rem;
  font-weight: 600;
  color: #e5e7eb;
}

.card-body {
  padding: 16px;
  font-size: 0.9rem;
  color: #d1d5db;
}

.small-note {
  font-size: 0.75rem;
  color: #9ca3af;
}

.card-controls {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 0.85rem;
}

/* Pills */

.critical-pill {
  display: inline-block;
  padding: 3px 8px;
  border-radius: 999px;
  background: #ef4444;
  color: #fff;
  font-size: 0.75rem;
  margin-left: 4px;
}

/* Select */

select {
  background: #020617;
  color: #e5e7eb;
  border: 1px solid #4b5563;
  border-radius: 6px;
  padding: 4px 10px;
  font-size: 0.85rem;
}

/* Table */

.table-wrapper {
  overflow-x: auto;
}

table {
  width: 100%;
  border-collapse: collapse;
  font-size: 0.85rem;
}

thead {
  background: #020617;
}

th,
td {
  padding: 10px 8px;
  border-bottom: 1px solid #1f2937;
  text-align: left;
}

th {
  color: #9ca3af;
  font-weight: 500;
}

tbody tr:hover {
  background: #0b1120;
}

/* Footer */

.page-footer {
  max-width: 1200px;
  margin: 20px auto 0;
  padding: 12px 16px 32px;
  font-size: 0.8rem;
  color: #6b7280;
  text-align: center;
}
